<svg width="1920" height="1080" xmlns="http://www.w3.org/2000/svg">
  <!-- Modern living room gradient background -->
  <defs>
    <linearGradient id="modernGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3d3d40;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2d2d30;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="wall" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#5a5a5c;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#4a4a4c;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Floor -->
  <rect x="0" y="600" width="1920" height="480" fill="url(#modernGrad)"/>

  <!-- Wall -->
  <rect x="0" y="0" width="1920" height="600" fill="url(#wall)"/>

  <!-- Subtle floor reflection -->
  <rect x="0" y="600" width="1920" height="80" fill="rgba(255,255,255,0.03)"/>

  <!-- Shadow for depth -->
  <ellipse cx="960" cy="1050" rx="400" ry="30" fill="rgba(0,0,0,0.2)"/>
</svg>
